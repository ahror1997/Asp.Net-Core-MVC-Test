@model Test.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    ViewData["Title"] = "Create a new product";
}

<h2>Create a new product</h2>

<form asp-controller="Product" asp-action="Store" autocomplete="off" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <input type="number" asp-for="CategoryId" />
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input type="text" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo" class="control-label"></label>
        <input type="file" asp-for="Photo" />
        <span asp-validation-for="Photo"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">Save</button>
    </div>
</form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" />}
}