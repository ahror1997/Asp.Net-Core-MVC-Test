@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    ViewData["Title"] = "Show product details";
    var product = ViewData["product"] as Product;
}
<h2>Details</h2>

<div>
    <p>@product.Id</p>
    <p>@product.Name</p>
    <p>@product.Price</p>
    <p>@product.CategoryId</p>
    <img src="~/uploads/@product.Photo" alt="@product.Photo" />

</div>